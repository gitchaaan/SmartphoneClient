<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS"
            android:id="@+id/switch_gps"
            android:checked="false"
            android:layout_alignParentTop="true" android:layout_alignRight="@+id/switch_wifi"
            android:layout_alignEnd="@+id/switch_wifi"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-Fi"
            android:id="@+id/switch_wifi"
            android:layout_marginTop="51dp" android:checked="false"
            android:layout_below="@+id/switch_gps" android:layout_alignRight="@+id/switch_acc"
            android:layout_alignEnd="@+id/switch_acc"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceleration"
            android:id="@+id/switch_acc"
            android:layout_marginTop="50dp" android:checked="false"
            android:layout_below="@+id/switch_wifi" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
